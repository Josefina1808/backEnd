<h2 class="text-danger">Lista de productos</h1>
  {{#if showList }}
<table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">TÃ­tulo</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
            <th scope="col">Add</th>
          </tr>
        </thead>
        <tbody>
          {{#each list}}
              <tr>
                  <th scope="row">{{this.id}}</th>
                  <td>{{this.title}}</td>
                  <td>${{this.price}}</td>
                  <td><img style="height: 3rem;" src="{{this.thumbnail}}" alt=""></td>
                  <td> 
                    <form action="/api/carrito" method="post">
                      <button type="submit" class="btn btn-success" value="{{this}}">+</button>
                    </form>
                  </td>
                </tr>
          {{/each}}
        </tbody>
      </table>
  {{else}}
    <h5 class="alert-danger rounded p-2">No se encontraron datos</h5>  
{{/if}}